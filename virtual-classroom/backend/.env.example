# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Agora Configuration
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here

# Agora Whiteboard (Netless) Configuration
# Get these from Agora Console > Project > Whiteboard
AGORA_WHITEBOARD_APP_ID=your_whiteboard_app_identifier_here
# SDK Token: Pre-generated from Agora Console (required for API authentication)
AGORA_WHITEBOARD_SDK_TOKEN=NETLESSSDK_your_sdk_token_here
# AK/SK: Alternative credentials (optional if using SDK token)
AGORA_WHITEBOARD_AK=your_access_key_here
AGORA_WHITEBOARD_SK=your_secret_key_here

# Doubao API Configuration
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_API_ENDPOINT=https://ark.cn-beijing.volces.com/api/v3

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Database Configuration (optional - for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/virtual_classroom
